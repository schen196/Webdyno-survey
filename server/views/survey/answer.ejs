<%- include ../partials/header.ejs%>
<%- include ../partials/main_nav.ejs%>

  <!-- Content for the Answer Survey Page-->
<div class="container">
  <div class="row">
      <div class="offset-md-3 col-md-6">
      <h1><%= title %></h1>

      <form class="form" method="POST">
          <div class="form-group">
              <label for="nameTextField">Survey Name:</label>
              <input type="text" class="form-control" disabled="true"
              id="nameTextField"
              placeholder="Enter Survey Name"
              name="name"
              value="<%= survey.name %>"
              required>
          </div>

          <div class="form-group">
            <label for="surveynameTextField">Survey Name:</label>
            <input type="text" class="form-control"
            id="surveynameTextField" 
            placeholder="Enter Survey Name"
            name="surveyname"
            required>
          </div>
          
          <div class="form-group">
            <label for="respondentTextField">Respondent Name:</label>
            <input type="text" class="form-control"
            id="respondentTextField" 
            placeholder="Enter Respondent Name"
            name="respondent"
            
            required>
          </div>

          <br>
          <div class="form-group">
            <input type="text" class="form-control"  disabled="true"
            id="q1TextField" 
            name="q1"
            value="<%= survey.q1 %>"
            required>
          </div>
        <div class="form-group">
          <input type="text" class="form-control"
          id="a1TextField" 
          placeholder="Answer for Question 1"
          name="a1"

          required>
        </div>

      <br>
        
        <div class="form-group">
          <input type="text" class="form-control"  disabled="true"
          id="q2TextField"
          name="q2"
          value="<%= survey.q2 %>"
          required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control"
          id="a2TextField" 
          placeholder="Answer for Question 2"
          name="a2"

          required>
        </div>

      <br>

        <div class="form-group">
          <input type="text" class="form-control"  disabled="true"
          id="q3TextField"
          name="q3"
          value="<%= survey.q3 %>"
          required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control"
          id="a3TextField" 
          placeholder="Answer for Question 3"
          name="a3"

          required>
        </div>

      <br>

          <button class="btn btn-primary" type="submit">
              <i class="fas fa-edit"></i> Submit</button>

              <a href="/surveys" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>

      </form>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs%>
<%- include ../partials/footer.ejs%>
<%- include ../partials/header.ejs%>

<!-- Content for the Answer Survey Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Survey Name:</label>
                <input type="text" class="form-control"
                id="nameTextField"
                disabled
                placeholder="Enter Survey Name"
                name="name"
                value="<%= survey.name %>"
                required>
            </div>

            <br>

            <div class="form-group">
                <label for="ownerTextField">Owner:</label>
                <input type="text" class="form-control"
                id="ownerTextField"
                disabled
                placeholder="Enter Survey Owner"
                name="owner"
                value="<%= survey.owner %>"
                required>
            </div>

            <br>

            <div class="form-group">
              <label for="q1TextField">Question 1:</label>
              <input type="text" class="form-control"
              id="q1TextField"
              disabled
              placeholder="Enter Question 1"
              name="q1"
              value="<%= survey.q1 %>"
              required>
            </div>

          <br>

          <div class="form-group">
            <label for="a1TextField">Answer 1:</label>
            <input type="text" class="form-control"
            id="a1TextField"
            placeholder="Enter Answer for Question 1"
            name="a1" required>
          </div>

          <br>
          
          <div class="form-group">
            <label for="q2TextField">Question 2:</label>
            <input type="text" class="form-control"
            id="q2TextField"
            disabled
            placeholder="Enter Question 2"
            name="q2"
            value="<%= survey.q2 %>"
            required>
          </div>

          <br>

          <div class="form-group">
            <label for="a2TextField">Answer 2:</label>
            <input type="text" class="form-control"
            id="a2TextField"
            placeholder="Enter Answer for Question 2"
            name="a2" required>
          </div>

          <br>

          <div class="form-group">
            <label for="q3TextField">Question 3:</label>
            <input type="text" class="form-control"
            id="q3TextField"
            disabled
            placeholder="Enter Question 3"
            name="q3"
            value="<%= survey.q3 %>"
            required>
          </div>

          <br>

          <div class="form-group">
            <label for="a3TextField">Answer 3:</label>
            <input type="text" class="form-control"
            id="a3TextField"
            placeholder="Enter Answer for Question 3"
            name="a3" required>
          </div>

          <br>

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>

                <a href="/surveys" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>

        </form>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs%>
<%- include ../partials/footer.ejs%>